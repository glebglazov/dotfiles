#!/usr/bin/env bash

# Find bare repo root (where .git dir with core.bare=true is located)
find_bare_root() {
    local dir="$PWD"
    while [[ "$dir" != "/" ]]; do
        if [[ -d "$dir/.git" ]] && [[ "$(git -C "$dir" config --get core.bare 2>/dev/null)" == "true" ]]; then
            echo "$dir"
            return 0
        fi
        dir=$(dirname "$dir")
    done
    return 1
}

bare_root=$(find_bare_root)
is_bare=false
if [[ -n $bare_root ]]; then
    # Bare repo worktree structure
    is_bare=true
    project_root="$bare_root"
    project_name=$(basename "$project_root")
    # Skip the bare repo entry itself (first line)
    worktrees=$(git -C "$project_root" worktree list 2>/dev/null | tail -n +2 | awk '{print $1}')
else
    # Normal git repo - check if we're in a git repo at all
    git_root=$(git rev-parse --show-toplevel 2>/dev/null)
    if [[ -z $git_root ]]; then
        echo "Not in a git repository"
        exit 1
    fi
    project_root="$git_root"
    # Get all worktrees
    worktrees=$(git -C "$project_root" worktree list 2>/dev/null | awk '{print $1}')
fi

if [[ -z $worktrees ]]; then
    echo "No worktrees found"
    exit 1
fi

# Show only worktree names in fzf
selected_name=$(echo "$worktrees" | xargs -n1 basename | fzf-tmux -p 55%,60% \
    --no-sort --border-label ' worktrees ' --prompt 'ðŸŒ³  ' \
    --bind 'tab:down,btab:up')

if [[ -z $selected_name ]]; then
    exit 0
fi

# Find the full path for the selected worktree
selected=$(echo "$worktrees" | grep "/${selected_name}$")

# Session naming: bare repos use project_name/worktree, normal repos just use worktree name
if [[ $is_bare == true ]]; then
    session_name="${project_name}/${selected_name}"
else
    session_name="$selected_name"
fi

# Replace dots and colons with underscores for tmux compatibility
session_name=$(echo "$session_name" | tr '.:' '_')

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$session_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$session_name" 2>/dev/null; then
    tmux new-session -ds "$session_name" -c "$selected"
fi

tmux switch-client -t "$session_name"
