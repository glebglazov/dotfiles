{{- $workstation := false -}}
{{- $bastion := false -}}
{{- $sshKeys := list -}}
{{- $gpgKeys := list -}}

{{- if eq .chezmoi.hostname "bastion" -}}
{{-   $bastion = true -}}
{{- else -}}
{{-   $workstation = true -}}
{{- end -}}

{{- $sshKeys := list }}
{{- if $bastion }}
{{-   $sshKeys = concat $sshKeys (list "bastion") }}
{{- end }}
{{- if $workstation }}
{{-   $sshKeys = concat $sshKeys (list "gglazov_main" "gglazov_deprecated") }}
{{- end }}

[data]
bastion = {{ $bastion }}
workstation = {{ $workstation }}
ssh_keys = [ {{ $sshKeys | quoteList | join ", " }} ]
gpg_keys = [ {{ $gpgKeys | quoteList | join ", " }} ]
